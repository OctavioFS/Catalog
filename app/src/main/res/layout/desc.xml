<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/window">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/innerImage"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/innerImage"
        android:layout_alignStart="@+id/innerImage"
        android:layout_alignEnd="@+id/innerImage"
        android:id="@+id/icons">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/newIcon"
            android:layout_marginRight="5dp"
            android:background="@drawable/new_icon" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/digitalResourcesIcon"
            android:layout_marginRight="5dp"
            android:background="@drawable/digital_resources" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/dvdIcon"
            android:layout_marginRight="5dp"
            android:background="@drawable/dvd" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/audioIcon"
            android:layout_marginRight="5dp"
            android:background="@drawable/audio" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/appIcon"
            android:layout_marginRight="5dp"
            android:background="@drawable/app" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/micrositeIcon"
            android:layout_marginRight="5dp"
            android:background="@drawable/microsite" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/videosIcon"
            android:layout_marginRight="5dp"
            android:background="@drawable/videos" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/clilIcon"
            android:layout_marginRight="5dp"
            android:background="@drawable/clil" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/digitalBookIcon"
            android:layout_marginRight="5dp"
            android:background="@drawable/digital_book" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/examFriendlyIcon"
            android:layout_marginRight="5dp"
            android:background="@drawable/exam_friendly" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/iBookIcon"
            android:layout_marginRight="5dp"
            android:background="@drawable/ibook" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/spiralIcon"
            android:layout_marginRight="5dp"
            android:background="@drawable/spiral" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/solutionIcon"
            android:layout_marginRight="5dp"
            android:background="@drawable/solution" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/learningIcon"
            android:layout_marginRight="5dp"
            android:background="@drawable/learning" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/suggestedIcon"
            android:layout_marginRight="5dp"
            android:background="@drawable/hours3" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/levelIcon"
            android:layout_marginRight="5dp"
            android:background="@drawable/levels2" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/britishIcon"
            android:layout_marginRight="5dp"
            android:background="@drawable/british" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre"
        android:id="@+id/textName"
        android:layout_below="@+id/icons"
        android:layout_alignStart="@+id/icons"
        android:layout_alignEnd="@+id/icons"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Description"
        android:id="@+id/textView"
        android:layout_below="@+id/textName"
        android:layout_alignStart="@+id/icons"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/icons"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:paddingBottom="20dp" />

</RelativeLayout>
</ScrollView>